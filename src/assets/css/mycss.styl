.g-commonwrap
    padding: 0 .24rem
.s-bgcolor
    background-color #fff
.f-mt
    margin-top: 0.2rem
//header开始
.g-header
    display: flex
    flex-direction: row
    height: $topHeight
    line-height: $topHeight
    overflow: hidden
    background-color: $bgColor
    color: #fff
    .headerleft
        display inline-block
        width .88rem
        line-height .88rem
        // padding 0 .2rem
        color #fff
        font-size .36rem
        text-align center
        .backicon
            font-size .34rem
            font-weight bold
    .headersearch
        flex 1
        width 100%
        height .6rem
        line-height .6rem
        margin-top .12rem
        font-size .28rem
        box-sizing border-box
        padding-left .2rem
        border-radius .04rem
        background-color #fff
        color #ddd
    .headerright
        color #fff
        padding 0 .2rem
        .arrow-bottom
            font-size .26rem

//hearde结束

//Swiper开始
.g-wrap
    overflow hidden
    background-color #ddd
    margin-bottom: 0.02rem
    height 2rem
    width 100%
    // padding-bottom 26.7%
    .swiperimg
        height 100%
        width 100%
//Swiper结束

//Iconlist开始
.m-iconwrap
    .g-wrap
        display flex
        flex-direction row
        flex-wrap wrap
        padding-top 0.1rem
        height 3.7rem
        background-color #fff
        .iconbox
            display flex
            flex-direction: column
            justify-content: space-between;
            align-items: center;
            padding-top 0.1rem
            width 25%
            height 1.5rem
            .iconimg
                width 1.1rem
                height 1.1rem
                background 0
            .title
                margin-top .1rem
                color #212121
                font-size .28rem
.g-discount
    display flex
    flex-direction row
    width 100%
    background-color #fff
    .discount
        flex 1
        height: .98rem
        font-size: .28rem
        color: #212121
        line-height: .98rem
        text-align: center
//Iconlist结束

//Sale开始
.g-sale
    display: flex
    flex-direction: row
    width: 100%
    margin-top: .2rem
    background-color: #fff
    .m-sale
        flex 1
        display: flex
        flex-direction: row
        justify-content: center;
        .box
            // margin-left: 0.5rem 
            height: 1.4rem;
            line-height: 1.4rem;
            color: #212121;
            font-size: .28rem;
            .title
                display: block
                padding-top: 0.4rem
                height 0.32rem
                line-height: 0.32rem
                font-size: 0.32rem
                color: red
            .desc
                display: block
                padding-top: 0.16rem
                height 0.2rem
                line-height: 0.2rem
                font-size: 0.2rem
        .saleimg
            margin: auto 0.4rem 
            height: 1rem
            width: 1rem
            border-radius: 50%
//Sale结束

//Hot开始
.m-nartitle
    // background-color: #fff
    padding: 0.24rem 0 
    .title
        font-size: 0.28rem
    .hotimg
        display: inline-block
        overflow: hidden
        width: .3rem
        height: .3rem
        margin-bottom: 0.1rem
        // vertical-align: middle
    .more
        float right
        color: #616161
        font-size: .24rem
        line-height: .28rem
.m-slide
    display flex
    padding .2rem 0
    overflow-x scroll
    overflow-y hidden
    .hotitem
        // margin-left .2rem
        width 2rem
        position relative
        margin-right: .12rem;
        .top
            position absolute
            left -.05rem
            top -.05rem
            width .84rem
            height .4rem
            .topimg
                width 100%
        .hotimg
            width 2rem
            height 2rem
        .title
          ellipsis()
          font-size .24rem
          padding-top .1rem
          padding-bottom .1rem
          text-align center
        .price
            font-size .24rem
            text-align center
            .orange
                font-size .28rem
                color #ff8300
//Hot结束

//Youlike开始
.m-list
    display flex
    flex-direction row
    padding 0.2rem 0
    .listimg
        width 2rem
        height 2rem 
    .box
        margin-left .2rem
        width 100%
        .title
            font-size 0.32rem
            padding-top 0.2rem
            padding-bottom 0.2rem
        .star
            margin-bottom 0.4rem
        .wrap
            display flex
            justify-content space-between
            .price
                font-size 0.36rem
                color #ff8300
            .address
                font-size 0.24rem
                color #666
//Youlike结束

//weekgo开始
.g-week
    .title
        height .8rem
        padding-left .26rem
        line-height .8rem
        color #212121
    .box
        
        .weekimg
            width 100%
        .wrap
            padding 0.2rem
            .wraptitle
                overflow hidden
                padding-right 1.4rem
                color #212121
                font-size .28rem
                line-height .48rem
                white-space nowrap
                text-overflow ellipsis
            .desc
                overflow hidden
                padding-right 1.4rem
                color #616161
                font-size .24rem
                line-height .42rem
                white-space nowrap
                text-overflow ellipsis
//weekgo结束


//Footer开始
.versionbox
    display: flex
    justify-content: center
    .version
        margin: 0 15px;
.sign
    padding: 10px
    color: #9e9e9e
    text-align: center
    font-size: 14px
//Footer结束


//City开始
.g-city
    background: #fff
//City结束

//cityheader开始
.g-cityheader
    position relative
    overflow hidden
    height 0.86rem
    line-height 0.86rem
    background #00bcd4
    text-align center
    color #fff
    font-size 0.4rem
    .cityback
        position absolute
        left 10px
        color #fff
//cityheader结束

//citysearch开始
.m-search
    height 0.72rem
    padding 0 0.1rem
    background #00bcd4
    .sinp
        box-sizing content-box
        width 100%
        line-height 0.62rem
        text-align center
        border-radius 0.06rem
        color #666
.content
    z-index 1
    position absolute
    overflow hidden
    top 1.58rem
    left 0
    right 0
    bottom 0
    background #eee
    .m-sortlist
        .listbox
            background: #fff
            .u-sortlist
                line-height 0.72rem
                padding-left 0.2rem
                text-align left
//citysearch结束

//addresslist开始
.g-list
    overflow: hidden
    width: 100%;
    .m-area
        display flex
        flex-direction column
        .title
            line-height 0.44rem
            background #eee
            padding-left 0.2rem
            color #666
            font-size 0.22rem
            text-align left
        .listbtn
            overflow hidden
            padding 0.1rem 0.6rem 0.1rem 0.1rem
            .btnwrap
                float: left;
                width: 33.33%;
                .u-listbtn
                    margin 0.1rem
                    padding 0.1rem 0
                    text-align center
                    border 0.02rem solid #ccc
                    border-radius 0.06rem
                    font-size 0.26rem
    .m-sortlist
        .title
            line-height 0.44rem
            background #eee
            padding-left 0.2rem
            color #666
            font-size 0.22rem
            text-align left
        .listbox
            .u-sortlist
                line-height 0.72rem
                padding-left 0.2rem
                text-align left
//addresslist结束


//letter开始
.m-letter
    display: flex
    flex-direction: column
    justify-content: center
    position: absolute
    top: 1.58rem
    right: 0
    bottom: 0
    width: .4rem
    .item
        line-height 0.4rem
        text-align center
        color #00bcd4
//letter结束
